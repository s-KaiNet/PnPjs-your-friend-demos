// Coloque su configuración en este archivo para sobrescribir la configuración predeterminada y de usuario.
// PostCSS validation using stylelint: https://github.com/Microsoft/vscode/issues/3907
{
  "typescript.tsdk": "./node_modules/typescript/lib",
  "vsicons.presets.angular": false,
  "tslint.enable": true,
  "css.validate": false,
  "stylelint.enable": true,
  "tslint.autoFixOnSave": true,
  "files.autoSave": "onFocusChange",
  "editor.formatOnSave": true,
  "prettier.disableLanguages": ["jsonc"],
  "[jsonc]": {
    "editor.formatOnSave": false
  },
  "emmet.showExpandedAbbreviation": "inMarkupAndStylesheetFilesOnly"
}
